</body>

<script>
    var linkCount = 1;

    function addLink() {
        linkCount++;

        var linkContainer = document.getElementById("linkContainer");
        var linkItem = document.createElement("div");
        linkItem.className = "link-item";

        var inputGroup = document.createElement("div");
        inputGroup.className = "input-group";

        var prependDiv = document.createElement("div");
        prependDiv.className = "input-group-prepend";

        var span = document.createElement("span");
        span.className = "input-group-text";
        span.textContent = "Social name & Links";

        var linkInput = document.createElement("input");
        linkInput.type = "text";
        linkInput.className = "form-control";
        linkInput.name = "link" + linkCount;
        linkInput.placeholder = "Your Link";
        linkInput.required = true; // Make link input required

        var nameInput = document.createElement("input");
        nameInput.type = "text";
        nameInput.className = "form-control";
        nameInput.name = "name" + linkCount;
        nameInput.placeholder = "Social";
        nameInput.required = true; // Make name input required

        var deleteButton = document.createElement("button");
        deleteButton.type = "button";
        deleteButton.className = "btn btn-danger";
        deleteButton.textContent = "x";
        deleteButton.onclick = function() {
            linkItem.remove(); // Remove the linkItem from the DOM
        };

        prependDiv.appendChild(span);
        inputGroup.appendChild(prependDiv);
        inputGroup.appendChild(nameInput);
        inputGroup.appendChild(linkInput);
        inputGroup.appendChild(deleteButton);
        linkItem.appendChild(inputGroup);
        linkContainer.appendChild(linkItem);

        // Update the hidden input value with the current link count
        document.getElementById("linkCount").value = linkCount;
    }
</script>
</html>
